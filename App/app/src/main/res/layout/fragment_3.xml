<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.gaoxian.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.gaoxian.widget.TitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/scrollView_son"
            android:layout_height="match_parent">

            <!--进水-->
            <LinearLayout
                android:layout_marginTop="@dimen/middle_padding"
                android:layout_marginLeft="@dimen/middle_padding"
                android:layout_marginRight="@dimen/middle_padding"
                android:layout_width="match_parent"
                android:background="@drawable/bg_water_info"
                android:layout_height="200dp"
                android:gravity="center|top"
                android:orientation="vertical">
                <TextView
                    android:text="进厂水水质"
                    android:layout_marginTop="@dimen/more_big_padding"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/big_textsize"
                    android:textColor="@color/black_color"
                    android:layout_height="wrap_content" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scrollbars="none" >
                    <LinearLayout
                        android:id="@+id/id_j_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/middle_padding"
                android:layout_marginRight="@dimen/middle_padding"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="1dp"
                    android:background="@color/black_gray_color"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_j_water_level_str"
                    android:text="@string/j_water_level_str"
                    android:layout_width="0dp"
                    android:padding="@dimen/small_padding"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:background="@color/black_gray_color"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="@dimen/middle_padding"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/middle_padding"
                android:background="@color/black_gray_color"
                android:layout_height="1dp"/>

            <!--出水-->
            <LinearLayout
                android:layout_marginTop="@dimen/middle_padding"
                android:layout_marginLeft="@dimen/middle_padding"
                android:layout_marginRight="@dimen/middle_padding"
                android:layout_width="match_parent"
                android:background="@drawable/bg_water_info"
                android:layout_height="200dp"
                android:gravity="center|top"
                android:orientation="vertical">
                <TextView
                    android:text="出厂水水质"
                    android:layout_marginTop="@dimen/more_big_padding"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/big_textsize"
                    android:textColor="@color/black_color"
                    android:layout_height="wrap_content" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/middle_padding"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" >
                    <LinearLayout
                        android:id="@+id/id_c_gallery"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/middle_padding"
                android:layout_marginRight="@dimen/middle_padding"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="1dp"
                    android:background="@color/black_gray_color"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_c_water_level_str"
                    android:text="@string/c_water_level_str"
                    android:layout_width="0dp"
                    android:padding="@dimen/small_padding"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:background="@color/black_gray_color"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="@dimen/middle_padding"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/middle_padding"
                android:background="@color/black_gray_color"
                android:layout_height="1dp"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
