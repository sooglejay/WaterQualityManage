<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="260dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/most_big_padding"
        android:layout_marginRight="@dimen/most_big_padding"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/username_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:minHeight="48dp"
            android:textSize="@dimen/middle_textsize"
            android:background="@drawable/edittext_background"
            android:singleLine="true"
            android:drawableLeft="@drawable/user_edittext"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/middle_padding"
            />

        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="请输入密码"
            android:textSize="@dimen/middle_textsize"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/password_edittext"
            android:singleLine="true"
            android:password="true"/>
        <CheckBox
            android:id="@+id/rememberpassword_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/little_padding"
            android:layout_marginTop="@dimen/little_padding"
            android:layout_gravity="left"
            android:text="记住密码"
            android:textColor="#00526b"
            android:textSize="18dp" />
        <Button
            android:id="@+id/login_bn"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/middle_padding"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@color/white_color"
            android:background="@drawable/btn_select_blue"/>
        </LinearLayout>
</LinearLayout>