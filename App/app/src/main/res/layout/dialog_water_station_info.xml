<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_station_title"
            android:layout_width="wrap_content"
            android:text="@string/hello_world"
            android:textColor="@color/black_gray_color"
            android:textSize="@dimen/big_textsize"
            android:background="@drawable/icon_map_title"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />
     <View
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="1dp"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_map_dialog_bottom"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_toxic"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginTop="@dimen/middle_padding"
            android:textSize="@dimen/big_textsize"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:layout_marginRight="@dimen/middle_padding"
            android:text="毒性：10%"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@color/very_light_gray_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_j_water_quality"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:textSize="@dimen/big_textsize"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:layout_marginRight="@dimen/middle_padding"
            android:text="入场水质：III类水"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@color/very_light_gray_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_c_water_quality"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:textSize="@dimen/big_textsize"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:layout_marginRight="@dimen/middle_padding"
            android:text="出场水质：合格"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@color/light_gray_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/middle_padding"
            android:layout_marginBottom="@dimen/middle_padding"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_enter"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/middle_padding"
                android:layout_weight="2"
                android:gravity="center"
                android:text="点击进入"
                android:background="@drawable/btn_select_green_oval"
                android:layout_height="38dp" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_back"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/middle_padding"
                android:layout_weight="2"
                android:gravity="center"
                android:text="返  回"
                android:background="@drawable/btn_select_green_oval"
                android:layout_height="38dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>