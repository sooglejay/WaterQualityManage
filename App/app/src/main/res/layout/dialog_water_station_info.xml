<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:text="毒性：10%"
            android:layout_height="36dp" />
        <View
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@color/very_light_gray_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <EditText
            android:layout_width="match_parent"
            android:text="入场水质：III类水"
            android:layout_marginTop="@dimen/little_padding"
            android:background="@null"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_height="36dp" />
        <View
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@color/very_light_gray_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <EditText
            android:layout_width="match_parent"
            android:text="出场水质：合格"
            android:background="@null"
            android:layout_marginTop="@dimen/little_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_height="36dp" />
        <View
            android:layout_marginRight="@dimen/middle_padding"
            android:layout_marginLeft="@dimen/middle_padding"
            android:background="@color/light_gray_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/middle_padding"
        android:layout_marginBottom="@dimen/middle_padding"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="@dimen/middle_padding"
            android:text="点击进入"
            android:background="@drawable/btn_select_green_oval"
            android:layout_height="38dp" />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="返回"
            android:layout_marginRight="@dimen/middle_padding"
            android:background="@drawable/btn_select_green_oval"
            android:layout_height="38dp" />
    </LinearLayout>

</LinearLayout>