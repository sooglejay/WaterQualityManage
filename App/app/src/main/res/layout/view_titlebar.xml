<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/title_bar_top_bg_color"
        android:gravity="center"
        android:text="宜宾高县水厂"
        android:textColor="@color/white_color"
        android:textSize="@dimen/big_textsize"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_bottom_bg_color"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_8_base"
            android:padding="@dimen/small_padding"
            android:text="水质信息"
            android:textColor="@color/white_color"
            android:textSize="@dimen/big_textsize" />
    </LinearLayout>
</LinearLayout>